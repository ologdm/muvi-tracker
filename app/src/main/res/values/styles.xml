<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--per imageButtonStyle, applicato su temi -->
    <style name="ImageButton_Rounded">
        <item name="android:background">@drawable/baseline_circle</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- per ShapeImageView, manuale -->
    <style name="ImageLarge_RoundedShape" parent="ShapeAppearance.Material3.Corner.Large" />

    <style name="ImageMedium_RoundedShape" parent="ShapeAppearance.Material3.Corner.Medium" />

    <style name="ImageSmall_RoundedShape" parent="ShapeAppearance.Material3.Corner.Small" />

    <!-- GRAFICA PER LAYOUT   -->

    <!--empty states, manuale-->
    <style name="ErrorText_ES">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="ProgressBar_ES">
        <item name="android:elevation">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:indeterminate">true</item>
    </style>


    <!--base category -->
    <style name="Toolbar_BaseCategory">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="RecyclerView_BaseCategory">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clipToPadding">true</item>
    </style>


    <!--base vh -->
    <style name="Image_BaseVH">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ImageLarge_RoundedShape</item>
    </style>

    <style name="Image_Season">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ImageMedium_RoundedShape</item>
    </style>

    <style name="Image_Related">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ImageSmall_RoundedShape</item>
    </style>



    <!-- TYPOGRAFY PER LAYOUT -->
    <!--base vh -->
    <style name="TextView_Tipography_BaseVH">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!--details-->
    <style name="Title_Typography_Detail">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>>
    </style>


    <style name="Category_Title_Typography_Detail">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8sp</item>
    </style>



</resources>


