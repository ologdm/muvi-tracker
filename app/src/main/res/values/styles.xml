<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--per imageButtonStyle, applicato su temi -->
    <style name="ImageButtonRounded">
        <item name="android:background">@drawable/baseline_circle</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:tint">?attr/colorOnPrimaryContainer</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- per ShapeImageView, manuale -->
    <style name="ImageLargeRoundedShape" parent="ShapeAppearance.Material3.Corner.Large" />

    <style name="ImageMediumRoundedShape" parent="ShapeAppearance.Material3.Corner.Medium" />

    <style name="ImageSmallRoundedShape" parent="ShapeAppearance.Material3.Corner.Small" />

    <!-- GRAFICA PER LAYOUT   -->

    <!--empty states, explore, detail-->
    <style name="ErrorTextOnStates">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <style name="ProgressBarOnStates">
        <item name="android:elevation">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:indeterminate">true</item>
    </style>


    <!--explore fragments -->
    <style name="TitleExploreCategory">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="RecyclerViewExploreCategory">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clipToPadding">true</item>
    </style>


    <!--explore viewholder -->
    <style name="ImageExploreViewholder">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ImageLargeRoundedShape</item>
    </style>

    <style name="ImageSeason">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ImageMediumRoundedShape</item>
    </style>

    <style name="ImageRelatedOnDetail">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ImageSmallRoundedShape</item>
    </style>



    <!-- TYPOGRAFY PER LAYOUT -->
    <!--explore viewholder -->
    <style name="TextViewExploreViewholder">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!--details-->
    <style name="TitleDetail">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>>
    </style>


    <style name="TitleCategoryDetail">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>




    <!--    NOTE:
            colorOnBackground - testo nelle schermate principali;
            colorOnSurfaceContainer - testo nei componenti sopra il background;
            colorOnSurfaceVariant - testo secondario o disabilitato (default su textview M3 automatico)
            -->


