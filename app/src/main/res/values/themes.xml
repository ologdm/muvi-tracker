<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Applicazione => un tema per activity  -->
    <style name="Theme.MuviTracker" parent="Theme.Material3.DynamicColors.DayNight">

        <!-- no toolbar -->
        <item name="windowNoTitle">true</item>

        <!-- colore status + navigation bar, sfondo -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?colorSurfaceContainer</item>

        <!-- colore sfondo status + navigation bar, simboli -->
        <item name="android:windowLightStatusBar">@bool/light_icons</item>
        <item name="android:windowLightNavigationBar">@bool/light_icons</item>


        <!-- personalizzo view con stile => che definisco su style -->
        <item name="imageButtonStyle">@style/ImageButtonRounded</item>


        <!-- colore testo di default per tutte le TextView -->
        <item name="android:textViewStyle">@style/DefaultTextView</item>

    </style>


    <!-- stile base per tutte le TextView -->
    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!--    TODO colori suggeriti eugi per tutti i testi detail
     day - 1b1b1b
     night - f9f9f9
     -->



</resources>





