<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout_width="wrap_content"
            app:layout_constraintDimensionRatio="2:3"
            tools:background="@tools:sample/avatars"
            app:shapeAppearance="@style/ImageLarge_RoundedShape"
            android:background="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent" />


    <!-- Titoli: -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintEnd_toEndOf="parent">


        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="DeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpoolDeadpool"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                />

        <TextView
                android:id="@+id/otherInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2016 (US)"
                android:textSize="16sp"

                android:layout_marginBottom="10dp" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageButton
                    android:id="@+id/likedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_liked_border"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:importantForAccessibility="no" />

            <CheckBox
                    android:id="@+id/watchedCheckBox"
                    android:text="@string/watchedCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>